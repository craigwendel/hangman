<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hangman!</title>
  </head>
  <body>
    <h1>Hangman</h1>

  <div class="newgame">
    <form class="" action="/newgame" method="post">
      <input type="submit" name="submit" value="New Game">
    </form>
  </div>
  <div class="guesses">
    <h3>Number of guesses left: {{guessesLeft}}</h3>
  </div>
  <div class="random-word">
    <h3>The word is: {{usersWord}}</h3>
  </div>
  <div class="display-message">
    <h3>{{displayMessage}}</h3>
  </div>
  <div class="guess-selector">
    <form class="make-a-guess" action='/guessletter' method="post">
      <input class="guessletter" type="textbox" name="guess" value="" placeholder="Enter a letter">
      <input type="submit" name="submit" value="Make a guess!">
    </form>
    <div class="letters-guessed">
      <h4>Letters guessed: {{lettersGuessed}}</h4>
    </div>
  </div>
  <div class="display-message">
    <h3></h3>
  </div>
  </body>
</html>
